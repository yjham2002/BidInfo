<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    card_view:cardCornerRadius="4dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="@dimen/iconSize"
            android:layout_height="@dimen/iconSize"
            android:id="@+id/favicon"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/week_padding"
            android:src="@drawable/div_01" />

        <LinearLayout
            android:orientation="vertical"
            android:padding="@dimen/default_margin"
            android:layout_weight="7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:id="@+id/subject"
                    android:layout_gravity="left"
                    android:textColor="@color/jet"
                    android:textSize="@dimen/default_text_mid" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:layout_width="@dimen/default_text"
                        android:layout_height="@dimen/default_text"
                        android:src="@drawable/icon_like"
                        android:layout_gravity="center_vertical"
                        />
                    <TextView
                        android:id="@+id/indicate_like"
                        android:layout_width="wrap_content"
                        android:text="0"
                        android:textColor="@color/monsoon"
                        android:textSize="@dimen/default_text"
                        android:layout_margin="2dp"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:layout_marginLeft="5dp"
                        android:layout_width="@dimen/default_text"
                        android:layout_height="@dimen/default_text"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/icon_comment"
                        />
                    <TextView
                        android:id="@+id/indicate_comment"
                        android:layout_width="wrap_content"
                        android:text="0"
                        android:textColor="@color/monsoon"
                        android:textSize="@dimen/default_text"
                        android:layout_margin="2dp"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/week_padding"
                android:text="1970-01-01"
                android:id="@+id/rawdate"
                android:textColor="@color/jet"
                android:textSize="@dimen/default_text" />
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>

